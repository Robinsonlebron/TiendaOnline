@using TiendaOnline.Models
@model ProductoAndSlider

@{
    ViewData["Title"] = "Pagina Principal";
}


<br />
<br />

<div style="background-color:honeydew">

    <div id="carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @{Boolean first = true;}
            @foreach (Slider item in Model.sliders)
            {
                <div class="carousel-item  @(first?"active": "")">
                    <img style="width:1050px; height:380px" src="@item.image" alt="Slider" />
                </div>

                first = false;
            }

        </div>
        <a class="carousel-control-prev" data-target="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" data-target="#carousel" data-slide="next">
            <span class="carousel-control-next-icon"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>

    <link rel="stylesheet" type="text/css" href="~/css/site.css">
    <br />
    <br />

    <div class="row">
        @foreach (var produc in Model.productos)
        {

            <div class="col-4">
                <div class="card mb-4 border-dark">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal">
                            <label style="font-size: 20px;color:black">@produc.Name</label>
                        </h4>
                    </div>
                    <img src="/@produc.image" alt="Card Image" class="card-img-top " style="height:250px; width:250px" />
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center ">
                            <div class="btn-group">
                                <label style="font-size:15px" ; color="#a51313"><b>Precio: @produc.Price</b></label>
                            </div>
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@produc.Id"  class="btn btn-info btn-lg">
                                <span class="glyphicon glyphicon-list-alt"></span> Detalles
                            </a>
                           </div>
                    </div>
                </div>

            </div>
        }
    </div>
</div>





@model TiendaOnline.Models.Orden
@{
    ViewData["Title"] = "Editar";
}

<br />
<h2 class="text-info">Editar Estado de Orden</h2>
<form asp-action="Edit" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="NoOrder">Numero de orden: </label>
            </div>
            <div class="col-5">
                <input  readonly="readonly" asp-for="NoOrder"  class="form-control" />
            </div>
            <span asp-validation-for="NoOrder" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name">Nombre: </label>
            </div>
            <div class="col-8">
                <input readonly="readonly" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Email">Correo Electronico: </label>
            </div>
            <div class="col-8">
                <input readonly="readonly" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Estado">Estado: </label>
            </div>
            <div class="col-8">
                <input asp-for="Estado" class="form-control" />
            </div>
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="OrderDate">Fecha: </label>
            </div>
            <div class="col-8">
                <input readonly="readonly" asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="PhoneNo">Telefono: </label>
            </div>
            <div class="col-8">
                <input asp-for="PhoneNo" readonly="readonly" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Address">Direccion: </label>
            </div>
            <div class="col-8">
                <input asp-for="Address" readonly="readonly" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="lat">Latitud: </label>
            </div>
            <div class="col-8">
                <input asp-for="lat" readonly="readonly" class="form-control" />
                <span asp-validation-for="lat" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="lng">Longitud: </label>
            </div>
            <div class="col-8">

                <input asp-for="lng" readonly="readonly" class="form-control" />
                <span asp-validation-for="lng" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Comentario">Comentario: </label>
            </div>
            <div class="col-8">

                <input asp-for="Comentario" readonly="readonly" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group">
            <input type="submit"  class="btn btn-primary" value="Update" />
            <a asp-action="Index" class="btn btn-success">Ir a la lista</a>
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

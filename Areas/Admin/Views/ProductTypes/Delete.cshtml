
@model TiendaOnline.Models.ProductTypes
@{
    ViewData["Title"] = "Eliminar";
}

<br />
<h2 class="text-info">Eliminar tipo de Producto</h2>
<form asp-action="Delete" method="post">
    <div class="p-4 rounded border">
        <input type="hidden"asp-for="Id"/>
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductType">Tipo: </label>
            </div>
            <div class="col-5">
                <input asp-for="ProductType" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="ProductType"  class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-outline-danger" value="Eliminar" />
            <a asp-action="Index" class="btn btn-outline-success">Ir a la lista</a>
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




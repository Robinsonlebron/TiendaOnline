
@{
    ViewData["Title"] = "UserRole";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Usuarios y sus Roles</h2>
    </div>
    @*<div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp; Agregar Nuevo Rol</a>
    </div>*@
</div>
<br />

<div>
    <table class="table table-striped border">

        <tr class="table-info text-center">
            <th>Nombre de Usuario</th>
            <th>Rol</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in ViewBag.UserRole)
        {
    <tr>
        <td>@item.UserName</td>
        <td>@item.RoleName</td>
        @*<td style="width: 150px">
            <partial name="_ButtonPartial6" model="@item.Id" />
        </td>*@
    </tr>
        }
    </table>
</div>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>
    <script type="text/javascript">
    $(function () {
        var save = '@TempData["Save"]'

        if (save != null) {
            alertify.success(save);

        }
    });
    </script>

}
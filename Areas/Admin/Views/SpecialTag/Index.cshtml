@model IEnumerable<TiendaOnline.Models.SpecialTag>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Lista Etiqueta de Productos</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" style="color:black" class="btn btn-info">
            <span class="glyphicon glyphicon-plus"></span> Nuevo Etiqueta de Producto
        </a>
        @*<a asp-action="Create" class="btn btn-info">&nbsp; Nueva Etiqueta de Producto</a>*@
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info text-center">
            <th>Etiquetas de Productos</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.specialTag</td>
                <td>
                    <partial name="_ButtonPartial2" model="@item.Id" />
                </td>
            </tr>
        }
    </table>
</div>
@section scripts{
        <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>
        <script type="text/javascript">
        $(function () {
            var save = '@TempData["save"]'

            if (save != null) {
                alertify.success(save);

            }
        });
        </script>

    }


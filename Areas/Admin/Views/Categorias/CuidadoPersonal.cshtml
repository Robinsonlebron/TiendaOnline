@using TiendaOnline.Models
@model List<Producto>
@{
    ViewData["Title"] = "Cuidado Personal";
}
<br />
<br />


<div class="row">
    @foreach (var produc in Model)
    {

        <div class="col-4">
            <div class="card mb-4 border-dark">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 23px;color: black">@produc.Name</label>
                    </h4>
                </div>
                <img src="/@produc.image" alt="Card Image" class="card-img-top" style="height:250px; width:250px" />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:15px" ; color="#a51313"><b>Precio: @produc.Price</b></label>
                        </div>
                        <a asp-action="Details" asp-controller="Categorias" asp-route-id="@produc.Id" class="btn btn-info form-control btn-sm align-text-top" style="font-size:15px ;color:black">Detalles</a>
                    </div>
                </div>
            </div>

        </div>
    }
</div>
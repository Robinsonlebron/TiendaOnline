@model IEnumerable<TiendaOnline.Models.ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Lista de Clientes</h2>
    </div>
   
</div>
<br />

<div>
    <table class="table table-striped border">

        <tr class="table-info text-center">
            <th>Nombre</th>
            <th>Nombre de Usuario</th>
 
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>@item.Nombre @item.Apellido</td>
        <td>@item.UserName</td>

        

        <td style="width: 150px">

            <a asp-action="VerCompras" class="btn btn-info" asp-route-id="@item.Id">
                <span class="glyphicon glyphicon-eye-open"></span> Ver Compras
            </a>
            @*<a asp-action="VerCompras" class="btn btn-info" asp-route-id="@item.Id">
            Ver Compras
            <i class="far fa-trash-alt"></i>
        </a>*@
        </td>


    </tr>
        }
    </table>
</div>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>
    <script type="text/javascript">
    $(function () {
        var save = '@TempData["Save"]'

        if (save != null) {
            alertify.success(save);

        }
    });
    </script>

}
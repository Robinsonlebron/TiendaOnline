@model TiendaOnline.Models.Producto
@{
    ViewData["Title"] = "Detalles";
}

<br />
<h2 class="text-info">Detalles de Producto</h2>
<form asp-action="Details" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name">Nombre: </label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="Name" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price">Precio: </label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Descripcion">Descripcion: </label>
                </div>
                <div class="col-8">
                    <input asp-for="Descripcion" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            @*<div class="form-group row">
                <div class="col-4">
                    <label asp-for="image">Foto: </label>
                </div>
                <div class="col-8">
                    <input asp-for="image" class="form-control" type="file" />
                </div>
                <span asp-validation-for="image" class="text-danger"></span>
            </div>*@
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Color">Color: </label>
                </div>
                <div class="col-8">
                    <input asp-for="Color" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Cantidad">Cantidad: </label>
                </div>
                <div class="col-8">
                    <input asp-for="Cantidad" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypeId">Tipo de Producto Id: </label>
                </div>
                <div class="col-8">
                    @*<select asp-for="ProductTypeId" asp-items="ViewBag.ProductTypeId" class="form-control"></select>*@
                    <input asp-for="ProductTypeId" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ProductTypeId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="specialTagId">Etiqueta Id: </label>
                </div>
                <div class="col-8">
                    @*<select asp-for="specialTagId" asp-items="ViewBag.specialTagId" class="form-control"></select>*@
                    <input asp-for="specialTagId" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="specialTagId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="disponible">Disponible: </label>
                </div>
                <div class="col-8">
                    <input asp-for="disponible" readonly="readonly" class="" type="checkbox" />
                </div>
                <span asp-validation-for="disponible" class="text-danger"></span>
            </div>
        </div>
        <div class="col-1">
        </div>
        <div class="col-3">
            <img src="~/@Model.image" width="100%" style="border-radius: 5px; border: 1px solid #efefef" />
        </div>




        <div class="form-group">
            <a type="button" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary" >Editar</a>
            <a asp-action="Index" class="btn btn-success">Ir a la lista</a>
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


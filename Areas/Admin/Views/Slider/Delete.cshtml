@model TiendaOnline.Models.Slider
@{
    ViewData["Title"] = "Detalles";
}

<br />
<h2 class="text-info">Eliminar foto del slider</h2>
<form asp-action="Delete" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="image">Tipo: </label>
            </div>
            <div class="col-5">
                <input asp-for="image" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="image" class="text-danger"></span>
        </div>
        <div class="form-group">

            <input type="submit" class="btn btn-danger" value="Eliminar" />
            @*<a asp-action="Index" class="btn btn-success">Ir la lista</a>*@
            @*<input type="submit" class="btn btn-success" value="Ir a la lista" />*@
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




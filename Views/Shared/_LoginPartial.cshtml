@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-white btn btn-info" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Saludos @User.Identity.Name </a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link text-white btn btn-info">Salir</button>
                </form>
            </li>
        }
        else
        {
            <div class="mynav_navbar">
                <li class="nav-item">
                    <a class="nav-link text-white btn btn-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
                </li>
            </div>

            <div class="mynav_navbar">
                <li class="nav-item">
                    <a class="nav-link text-white btn btn-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Iniciar Sesion</a>
                </li>
            </div>


           


        }
    </ul>